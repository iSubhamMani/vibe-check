generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  image String
  createdAt DateTime
  roomOwner Room?
}

model Room {
  roomCode      String   @id @unique
  owner_id      Int      @unique
  owner         User     @relation(fields: [owner_id], references: [id])
  musicQueue    String[]
  currentMusic  String?
}